<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="309dp"
        android:layout_height="213dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_logo" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayoutIcon"
        android:layout_width="387dp"
        android:layout_height="551dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo">

        <ImageButton
            android:id="@+id/imageButtonPersonagem"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#FFE8A2"
            android:padding="16dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_personagens" />

        <ImageButton
            android:id="@+id/imageButtonPlaneta"
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#FFE8A2"
            android:padding="16dp"
            android:scaleType="centerCrop"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@mipmap/ic_planeta" />

        <ImageButton
            android:id="@+id/imageButtonFilmes"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#FFE8A2"
            android:padding="16dp"
            android:scaleType="centerCrop"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@mipmap/ic_poster" />

        <ImageButton
            android:id="@+id/imageButtonVeiculos"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#FFE8A2"
            android:padding="16dp"
            android:scaleType="centerCrop"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@mipmap/ic_veiculo" />

        <ImageButton
            android:id="@+id/imageButtonEspecie"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#FFE8A2"
            android:padding="16dp"
            android:scaleType="centerCrop"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@mipmap/ic_especies" />

        <ImageButton
            android:id="@+id/imageButtonNaves"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#FFE8A2"
            android:padding="16dp"
            android:scaleType="centerCrop"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@mipmap/ic_naves" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>